form()#loginform
	h4 Login
	.form-group
		label(for='email')
		input(type='text', ng-model='form.email')
	.form-group
		label(for='password')
		input(type='password', ng-model='form.password')
	button(ng-click='login()') Login
form()#signupform
	h4 Create User
	.form-group
		input(type='text', name='email')
	.form-group
	input(type='password', name='password')
	.form-group
		input(type='text', name='forename')
	button(ng-click='createUser()') Create User
