#loginView.container
	form()#loginform.col-md-offset-1.col-md-4.col-md-offset-1
		h4 Login
		.form-group
			input(type='text', ng-model='login.email', placeholder="Email").form-control
		.form-group
			input(type='password', ng-model='login.password', placeholder="Password").form-control
		button(type='button', ng-model='btnLogin', ng-click='loginData()').btn.btn-default Log In
	form()#signupform.col-md-offset-1.col-md-4.col-md-offset-1
		h4 Create User
		.form-group
			input(type='text', ng-model='create.user.email', placeholder="Email").form-control
		.form-group
			input(type='password', ng-model='create.password', placeholder="Password").form-control
		.form-group
			input(type='text', ng-model='create.user.forename', placeholder="Display Name (Optional)").form-control
		button(type='button', ng-model='btnCreateUser', ng-click='createUser()').btn.btn-default Create User
