div(click-login, escapable="false")
div(style='padding:  35px;')
	form
		h1.formTitle Boards
		h4(ng-show='showWrite') Write Access
		div(ng-show='showWrite')
			table
				tbody
					tr(ng-repeat='board in boards.write')
						td(style='min-width:250px;')
							label {{board.name}}
						td
							button(ng-click='editClick(board._id)').btn.btn-default Edit	
							button(ng-click='viewBoard(board._id, board.name)').btn.btn-default View		
		br(ng-show='showWrite')
		h4(ng-show='showRead') Read Access
		div(ng-show='showRead')
			table.tableStyle
				tbody
					tr(ng-repeat='board in boards.read')
						td(style='min-width:250px;')
							label {{board.name}}
						td
							button(ng-click='editClick(board._id)').btn.btn-default Edit	
							button(ng-click='viewBoard(board._id, board.name)').btn.btn-default View		
